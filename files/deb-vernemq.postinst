#! /bin/sh
# postinst script for vernemq

if ! getent group vernemq >/dev/null; then
  addgroup --quiet --system vernemq
fi
if ! getent passwd vernemq >/dev/null; then
  adduser --disabled-password  --quiet --system \
    --home /var/run/vernemq --no-create-home\
    --gecos "VerneMQ broker" --group vernemq
  adduser --quiet pulse vernemq
fi
